<LblTxt@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt
        write_tab: False
<LblPss@BoxLayout>:
    orientation: 'horizontal'
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt
        password: True
        write_tab: False


<MyPopup@Popup>:
    auto_dismiss: False
    Button:
        text: 'ok!'
        on_release: root.dismiss()

<SignUp>:
    name: "signup"
    BoxLayout:
        orientation: 'vertical'

        LblTxt:
            id: username
            lblTxtIn: 'Username'

        LblPss:
            id: passw
            lblTxtIn: 'Password'

        LblPss:
            id: v_passw
            lblTxtIn: 'Verify Password'


        Button:
            text: 'Sign Up'
            on_release: root.handle_submit(username.theTxt.text, passw.theTxt.text, v_passw.theTxt.text)

        Button:
            text: "Already signed up?"
            on_release:
                app.root.current = 'signin'
                root.manager.transition.direction = 'left'


<SignIn>:
    name: 'signin'
    BoxLayout:
        orientation: 'vertical'

        LblTxt:
            id: username
            lblTxtIn: 'Username'

        LblPss:
            id: passw
            lblTxtIn: 'Password'

        Button:
            text: 'Sign In'
            on_release: root.handle_submit(username.theTxt.text, passw.theTxt.text)

        Button:
            text: "Not signed up yet?"
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = 'right'




MyScreenManager:
    SignUp:
    SignIn: